<Page class="page" navigatingTo="onNavigatingTo" navigatedTo="navigatedTo" xmlns="http://schemas.nativescript.org/tns.xsd">
    <Page.actionBar>
        <ActionBar class="action-bar">
            <StackLayout>
                <Label text="Brawo Ty!"/>
            </StackLayout>
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="*, auto">
        <ActivityIndicator busy="true" width="64" height="64"/>
        <Image id="image-final" src="{{ finalImageSource }}" width="100%" stretch="none"/>
        <StackLayout verticalAlignment="bottom">
            <FlexboxLayout class="navigation-buttons-container" >
                <Button class="btn-back only_icon mdi" text="{{ fonticon('mdi-share') }}" tap="shareTap" isEnabled="{{ finalImageSource !== undefined }}"/>
                <Button class="btn-next only_icon mdi" text="{{ fonticon('mdi-create') }}" tap="homeTap"/>
            </FlexboxLayout>
        </StackLayout>
    </GridLayout>
</Page>
