<Page class="page" navigatingTo="onNavigatingTo" navigatedTo="navigatedTo" xmlns="http://schemas.nativescript.org/tns.xsd">
    <Page.actionBar>
        <ActionBar title="5. Profit!">
            <NavigationButton text="Wstecz" android.systemIcon="ic_menu_back" tap="backTap"/>
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="*, auto">
        <ActivityIndicator busy="true" width="64" height="64"/>
        <Image id="image-final" src="{{ finalImageSource }}" width="100%" stretch="none"/>
        <GridLayout row="2" columns="*, *">
            <Button text="Udostępnij!" class="btn btn-primary" tap="shareTap" isEnabled="{{ finalImageSource !== undefined }}" col="0"/>
            <Button text="Nowy kolaż" class="btn btn-outline" tap="homeTap" col="1"/>
        </GridLayout>
    </GridLayout>
</Page>
