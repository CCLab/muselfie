<Page class="page" navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:fresco="nativescript-fresco">
    <Page.actionBar>
        <ActionBar title="4. Gdzie ma się pojawić twarz?">
            <NavigationButton text="Wstecz" android.systemIcon="ic_menu_back" tap="backTap"/>
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="*, auto">
        <fresco:FrescoDrawee width="100%" aspectRatio="1"
                             imageUri="{{ chosenBackgroundPath }}"/>
        <AbsoluteLayout>
            <Label id="placement-oval" 
                    pan="placementPan" 
                    touch="placementTouch" 
                    pinch="placementPinch" 
                    rotation="placementRotation"
                    top="{{ placementY }}"
                    left="{{ placementX }}" 
                    width="{{ placementWidth }}"
                    height="{{ placementHeight }}"
                    rotate="{{ placementRotation }}" 
                />
         </AbsoluteLayout>
        <Button text="Gotowe!" class="btn btn-primary" tap="nextTap" row="1"/>
    </GridLayout>
</Page>
