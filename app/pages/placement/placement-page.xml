<Page class="page" navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:fresco="nativescript-fresco">
      <Page.actionBar>
       <ActionBar class="action-bar">
             <StackLayout class="steps" orientation="horizontal" horizontalAlignment="left">
                <Label class="action-bar-step" text="3/3"/>
                <Label class="action-bar-title" text="dopasuj maskÄ™"/>
            </StackLayout>
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="*, auto">
        <fresco:FrescoDrawee width="100%" aspectRatio="1"
                             imageUri="{{ chosenBackgroundPath }}"/>
        <AbsoluteLayout pan="placementPan" touch="placementTouch" pinch="placementPinch" rotation="placementRotation">
            <Label id="placement-oval"
                    top="{{ placementY }}"
                    left="{{ placementX }}" 
                    width="{{ placementWidth }}"
                    height="{{ placementHeight }}"
                    rotate="{{ placementRotation }}" 
                />
        </AbsoluteLayout>
        <StackLayout verticalAlignment="bottom">
                <FlexboxLayout class="navigation-buttons-container" >
                    <Button class="btn-back only_icon mdi" text="{{ fonticon('mdi-arrow-back') }}" tap="backTap"/>
                    <Button class="btn-next mdi" text="{{ 'dalej' + fonticon('mdi-arrow-forward') }}"  tap="nextTap"/>
                </FlexboxLayout>
        </StackLayout>
    </GridLayout>
</Page>
