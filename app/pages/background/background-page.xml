<Page class="page" navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:fresco="nativescript-fresco">
     <Page.actionBar >
        <ActionBar class="action-bar">
            <StackLayout class="steps" orientation="horizontal" horizontalAlignment="left">
                <Label text="start" visibility="{{ !chosenBackgroundPath ? 'visible' : 'collapse' }}"/>
                <Label class="action-bar-step" text="{{ fonticon('mdi-live-help') }}" visibility="{{ chosenBackgroundPath ? 'visible' : 'collapse' }}" />
                <Label class="action-bar-title" text="autor tytuł" visibility="{{ chosenBackgroundPath ? 'visible' : 'collapse' }}"/>
            </StackLayout>
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="*, auto, auto">
        <fresco:FrescoDrawee id="image-background" width="100%" aspectRatio="1"
                             imageUri="{{ chosenBackgroundPath }}"
                             placeholderImageUri="res://ic_photo_black_48dp"/>
        <Button text="{{ chosenImagePath ? 'Zmień tło' : 'Wybierz tło' }}" tap="chooseTap" class="btn btn-outline" row="1"/>
        <Button text="Dalej!" class="btn btn-primary" tap="nextTap" isEnabled="{{ chosenBackgroundPath != '' }}" row="2"/>
    </GridLayout>
</Page>
