<Page class="page" navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:fresco="nativescript-fresco">
     <Page.actionBar >
        <ActionBar id="action-bar" class="action-bar">
            <StackLayout class="steps" orientation="horizontal" horizontalAlignment="right">
                <StackLayout class="action-bar-step">
                    <Label class="{{ infoVisibilty ? 'info close-info' : 'info' }}" tap="toggleInfo" horizontalAlignment="right"/>
                </StackLayout>
            </StackLayout>
        </ActionBar>
    </Page.actionBar>
   <GridLayout>
        <fresco:FrescoDrawee id="image-background" 
                                height="100%"
                                aspectRatio="1"
                                verticalAlignment="top"
                                imageUri="{{ chosenBackground.path }}"/>
        <GridLayout class="fake-action-bar" verticalAlignment="top" visibility="{{ infoVisibilty ? 'visible' : 'collapse' }}">
            <StackLayout verticalAlignment="middle">
                <Label class="picture-info" text="{{ chosenBackground.name }}" textWrap="true"/>
            </StackLayout>
        </GridLayout>
        <StackLayout verticalAlignment="bottom">
                <FlexboxLayout class="navigation-buttons-container">
                    <StackLayout class="btn-back-wrapper" tap="backTap">
                         <Label class="btn-back"/>
                    </StackLayout>
                    <StackLayout class="btn-next-wrapper" tap="choosePhoto" orientation="horizontal">
                        <Label class="btn-next-text" text="wybierz zdjÄ™cie"/>
                        <Label class="btn-next"/>
                    </StackLayout>
                </FlexboxLayout>
        </StackLayout>
        <Label class="logo"/>
    </GridLayout>
</Page>
