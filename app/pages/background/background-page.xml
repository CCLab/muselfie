<Page class="page" navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:fresco="nativescript-fresco">
     <Page.actionBar >
        <ActionBar class="action-bar">
            <StackLayout class="steps" orientation="horizontal" horizontalAlignment="left">
                <Label class="action-bar-start" text="start" visibility="{{ !chosenBackgroundPath ? 'visible' : 'collapse' }}"/>
                <StackLayout class="action-bar-step" visibility="{{ chosenBackgroundPath ? 'visible' : 'collapse' }}">
                    <Label class="info"/>
                </StackLayout>
                <Label class="action-bar-title" text="autor tytuł" visibility="{{ chosenBackgroundPath ? 'visible' : 'collapse' }}"/>
            </StackLayout>
        </ActionBar>
    </Page.actionBar>
   <GridLayout>
        <fresco:FrescoDrawee id="image-background" 
                                height="100%"
                                aspectRatio="1"
                                verticalAlignment="top"
                                imageUri="{{ chosenBackgroundPath }}"
                                placeholderImageUri="res://ic_photo_black_48dp"/>
        <StackLayout verticalAlignment="bottom">
                <FlexboxLayout class="navigation-buttons-container">
                    <StackLayout class="btn-choose-wrapper" tap="chooseTap" visibility="{{ chosenBackgroundPath  ? 'collapse' : 'visible' }}" orientation="horizontal">
                        <Label class="btn-choose-image-text" text="wybierz tło"/>
                        <Label class="btn-choose-image"/>
                    </StackLayout>
                    <StackLayout class="btn-back-wrapper" tap="chooseTap" visibility="{{ !chosenBackgroundPath  ? 'collapse' : 'visible' }}">
                         <Label class="btn-back"/>
                    </StackLayout>
                    <StackLayout class="btn-next-wrapper" tap="nextTap" visibility="{{ !chosenBackgroundPath   ? 'collapse' : 'visible' }}" orientation="horizontal">
                        <Label class="btn-next-text" text="dalej"/>
                        <Label class="btn-next"/>
                    </StackLayout>
                </FlexboxLayout>
        </StackLayout>
    </GridLayout>
</Page>
