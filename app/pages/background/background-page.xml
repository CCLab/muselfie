<Page class="page" navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:fresco="nativescript-fresco">
     <Page.actionBar >
        <ActionBar class="action-bar">
            <StackLayout class="steps" orientation="horizontal" horizontalAlignment="left">
                <Label text="start" visibility="{{ !chosenBackgroundPath ? 'visible' : 'collapse' }}"/>
                <Label class="action-bar-step info" visibility="{{ chosenBackgroundPath ? 'visible' : 'collapse' }}" />
                <Label class="action-bar-title" text="autor tytuł" visibility="{{ chosenBackgroundPath ? 'visible' : 'collapse' }}"/>
            </StackLayout>
        </ActionBar>
    </Page.actionBar>
   <GridLayout>
        <fresco:FrescoDrawee id="image-background" 
                                height="100%"
                                aspectRatio="1"
                                verticalAlignment="top"
                                imageUri="{{ chosenBackgroundPath }}"
                                placeholderImageUri="res://ic_photo_black_48dp"/>
        <StackLayout verticalAlignment="bottom">
                <FlexboxLayout class="navigation-buttons-container">
                    <Button class="btn-choose-image" text="wybierz tło" tap="chooseTap" visibility="{{ chosenBackgroundPath  ? 'collapse' : 'visible' }}"/>
                    <Button class="btn-back" tap="chooseTap" visibility="{{ !chosenBackgroundPath  ? 'collapse' : 'visible' }}"/>
                    <Button class="btn-next" text="dalej" tap="nextTap" visibility="{{ !chosenBackgroundPath   ? 'collapse' : 'visible' }}"/>
                </FlexboxLayout>
        </StackLayout>
    </GridLayout>
</Page>
