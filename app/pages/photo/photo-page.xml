<Page class="page" navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:fresco="nativescript-fresco">
    <Page.actionBar>
        <ActionBar class="action-bar">
             <StackLayout class="steps" orientation="horizontal" horizontalAlignment="left">
                <Label class="action-bar-step" text="2/3"/>
                <Label class="action-bar-title" text="Wybór zdjęcia"/>
            </StackLayout>
        </ActionBar>
    </Page.actionBar>
    <GridLayout>
        <fresco:FrescoDrawee id="image-photo" width="100%" aspectRatio="1"
                             imageUri="{{ chosenPhotoPath }}"
                             placeholderImageUri="res://ic_face_black_48dp"/>
        <StackLayout verticalAlignment="bottom">
            <FlexboxLayout class="navigation-buttons-container" >
                <StackLayout class="btn-back-wrapper" tap="backTap">
                         <Button class="btn-back" />
                </StackLayout>
                <StackLayout class="btn-choose-image-wrapper" tap="chooseTap" visibility="{{ chosenPhotoPath ? 'collapse' : 'visible' }}" orientation="horizontal">
                    <Label class="btn-choose-image-text" text="Wybierz zdjęcie" />
                    <Label class="btn-choose-image"/>
                </StackLayout>
                <StackLayout class="btn-next-wrapper" tap="nextTap" visibility="{{ !chosenPhotoPath ? 'collapse' : 'visible' }}" orientation="horizontal">
                        <Label class="btn-next-text" text="dalej" />
                        <Label class="btn-next"/>
                </StackLayout>
            </FlexboxLayout>
        </StackLayout>
    </GridLayout>
</Page>
