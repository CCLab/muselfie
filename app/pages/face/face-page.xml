<Page class="page" navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:fresco="nativescript-fresco">
    <Page.actionBar>
        <ActionBar title="3. Wskazanie twarzy">
            <NavigationButton text="Wstecz" android.systemIcon="ic_menu_back" tap="backTap"/>
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="*, auto">
        <fresco:FrescoDrawee id="image-photo" width="100%" aspectRatio="1"
                             imageUri="{{ chosenPhotoPath }}"/>
        <AbsoluteLayout>
            <Label id="face-oval" 
                    pan="facePan" 
                    touch="faceTouch" 
                    pinch="facePinch" 
                    rotation="faceRotation"
                    top="{{ faceY }}"
                    left="{{ faceX }}" 
                    width="{{ faceWidth }}"
                    height="{{ faceHeight }}"
                    rotate="{{ faceRotation }}" 
                />
         </AbsoluteLayout>
        <Button text="Dalej" class="btn btn-primary" tap="nextTap" row="1"/>
    </GridLayout>
</Page>
