<Page class="page" navigatingTo="onNavigatingTo" navigatedTo="navigatedTo" xmlns="http://schemas.nativescript.org/tns.xsd"
      xmlns:lv="nativescript-ui-listview" xmlns:fresco="nativescript-fresco">
      <Page.actionBar >
        <ActionBar class="action-bar">
            <StackLayout class="steps" orientation="horizontal" horizontalAlignment="left">
                <Label class="action-bar-step" text="1 / 3"/>
                <Label class="action-bar-title" text="Wybierz tÅ‚o z galerii"/>
            </StackLayout>
        </ActionBar>
    </Page.actionBar>
    <StackLayout>
        <GridLayout>
            <lv:RadListView id="gallery" items="{{ images }}">
                <lv:RadListView.listViewLayout>
                    <lv:ListViewGridLayout scrollDirection="Vertical" spanCount="2"/>
                </lv:RadListView.listViewLayout>
                <lv:RadListView.itemTemplate >
                    <GridLayout>
                        <fresco:FrescoDrawee height="{{ $parents['Page'].thumbnailHeight }}" imageUri="{{ path }}" tap="imageTap"/>
                        <Label class="{{ $parents['Page'].chosenFile, $parents['Page'].chosenFile == $value ? 'chosen-file' : '' }}"/>
                     </GridLayout>
                </lv:RadListView.itemTemplate>
            </lv:RadListView>
            <StackLayout verticalAlignment="bottom" visibility="{{ chosenFile ? 'visible' : 'collapse' }}">
                <FlexboxLayout class="navigation-buttons-container">
                    <StackLayout class="btn-next-wrapper" tap="nextTap" orientation="horizontal">
                        <Label class="btn-next-text" text="dalej" />
                        <Label class="btn-next"/>
                     </StackLayout>
                </FlexboxLayout>
            </StackLayout>  
         </GridLayout>
    </StackLayout>
</Page>
